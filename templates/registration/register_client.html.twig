{% extends 'base.html.twig' %}

{% block title %}Register Client{% endblock %}

{% block content %}
    <h1>Register Client</h1>

    {{ form_start(registrationForm, {'attr': {'id': 'client-registration-form', 'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            {{ form_label(registrationForm.nom) }}
            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
            <div class="error-message" id="nom-error"></div>
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.prenom) }}
            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
            <div class="error-message" id="prenom-error"></div>
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.adresse) }}
            {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control'}}) }}
            <div class="error-message" id="adresse-error"></div>
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.num_tel) }}
            {{ form_widget(registrationForm.num_tel, {'attr': {'class': 'form-control'}}) }}
            <div class="error-message" id="num_tel-error"></div>
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            <div class="error-message" id="email-error"></div>
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.ville) }}
            {{ form_widget(registrationForm.ville, {'attr': {'class': 'form-control'}}) }}
            <div class="error-message" id="ville-error"></div>
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.first) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            <div class="error-message" id="password-error"></div>
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.second) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}

<style>
    .error-message {
        color: red;
        font-size: 0.9em;
        margin-top: 4px;
    }

   .is-valid {
    border-color: green;
    background-image: url("data:image/svg+xml,...");
}
    
</style>

  
{% endblock %}