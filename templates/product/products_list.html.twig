{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h2>Product List</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Category </th>
                    <th>Business </th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>status</th>
                     <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.category.name }}</td>
                        <td>{{ product.business.businessName }}</td>
                        <td>{{ product.productName }}</td>
                        <td>{{ product.productDescription }}</td>
                                                <td>{{ product.status }}</td>

                        <td>{{ product.price }} TND</td>
                        <td>
                    <a href="{{ path('product_approve', {'id': product.id}) }}">Approve</a>
                    <a href="{{ path('product_reject', {'id': product.id}) }}">Reject</a>
                </td> 
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
